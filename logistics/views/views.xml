<odoo>
    <data>
        <record model="ir.ui.view" id="logistics_addon_view">
            <field name="name">logistics addon view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="operations_info" string="Operations info">
                        <group name="group_all">
                            <group name="group_left">
                                <field name="city_name_pol" string="POL"/>
                                <field name="city_name_pod" string="POD"/>
                                <field name="shipper" string="Shipper"/>
                                <field name="shipper_contact" string="Shipper Contact"/>
                                <field name="importer" string="Importer"/>
                                <field name="cargo_dimensions" string="Cargo Dimensions"/>
                            </group>
                            <group name="group_right">
                                <field name="transport_mean" string="Transport Mean"/>
                                <field name="waybill" string="Waybill"/>
                                <field name="order_date" string="Order Date"/>
                                <field name="arrival_date" string="Arrival Date"/>
                            </group>
                        </group>
                    </page>
                    <page name="customs" string="Customs">
                        <group name="group_all">
                            <group name="group_left">
                                <field name="importer" string="Importer"/>
                                <field name="inspector" string="Inspector"/>
                                <field name="customs_arrival_date" string="Arrival Date"/>
                                <field name="customs_departure_date" string="Departure Date"/>
                                <field name="customs_place" string="Customs Place"/>
                                <field name="terminal" string="Terminal"/>
                            </group>
                            <group name="group_right">
                                <field name="argo_volume" string="Cargo Volume"/>
                                <field name="invoice_value" string="Invoice Value"/>
                                <field name="invoice_currency" string="Invoice Currency"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>


